<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/parent_list_item_task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="00:00:00"
            android:textColor="@android:color/black"
            android:textSize="72sp" />

        <ImageButton
            android:id="@+id/button_start_stop"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical = "true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_play_circle_outline_black_48dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/parent_list_item_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical = "true"
            android:text="Task Title"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/parent_list_item_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical = "true"
            android:layout_alignParentRight="true"
            android:tint="@android:color/black"
            android:src="@android:drawable/arrow_down_float"
            android:background="@android:color/transparent"
            android:padding = "24dp"/>
    </RelativeLayout>

    <include
        android:id = "@+id/child_list_item"
        layout = "@layout/list_item_task_child">
    </include>

    <View style="@style/Divider"/>

</LinearLayout>