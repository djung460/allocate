<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is where you write a description of your task and write some moooore"
        android:id="@+id/child_list_item_task_description"
        android:textSize = "16sp"
        />

    <View style="@style/Divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:id="@+id/child_list_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical = "true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart ="true"
            android:tint="@android:color/black"
            android:src="@drawable/ic_delete_36pt"
            android:background="@android:color/transparent"
            android:padding = "24dp"/>

        <ImageButton
            android:id="@+id/child_list_item_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical = "true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:tint="@android:color/black"
            android:src="@drawable/ic_refresh_36pt"
            android:background="@android:color/transparent"
            android:padding = "24dp"/>
    </RelativeLayout>

</LinearLayout>